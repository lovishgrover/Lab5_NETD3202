@model IEnumerable<Lab5.Models.Customers>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Customer Id
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Address
            </th>
            <th>
                Issue
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.custId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.issue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.custId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.custId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.custId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
